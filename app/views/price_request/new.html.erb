<div class='page-header'>
  <div class="container">
    <h1>Compare your location</h1>
  </div>
</div>
<div class='wrapper-main'>
  <div class='container'>
    <div class='row'>
      <%= form_for @price_request, url: price_request_index_path, remote: true do |f| %>
        <div class='col-sm-3'>
          <span> Address</span>
          <%= text_field_tag :geo_address, nil,class: 'form-control' %>
        </div>
        <div class='col-sm-3'>
          <span> Monthly Average Rental</span>
          <%= f.text_field :avg_long_term_rental, class: 'form-control' %>
        </div>
        <%= f.hidden_field :address, 'data-geo'=> 'formatted_address'%>
        <%= f.hidden_field :region, 'data-geo'=> 'name'%>

        <div class='col-sm-3'>
          <%= f.submit 'Compare',class: 'btn btn-primary btn-compare' %>
        </div>
      <% end %>
    </div>
    <br/
    <div class='row'>
      <div class='col-sm-12 rent_diff'></div>
    </div>
  </div>
</div>
